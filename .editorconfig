# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending almost every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8

[*.{js,jsx,ts,tsx,css,scss,less,sass,json,yml,yaml}]
indent_size = 2

[*.json]
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore